{
    "ts-node": {
        "transpileOnly": true,
        "files": true
    },
    "exclude": ["lib", "src/_tests", "tsup.config.ts"],
    "compilerOptions": {
        "target": "es2020" /* Node 14+ */,
        "lib": ["es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"]
    }
}
